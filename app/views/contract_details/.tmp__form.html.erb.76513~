<%= simple_form_for @contract_detail do |f| %>
  <%= f.error_messages %>
  <%= f.label params[:id]||params[:contract_id] %><br>
  <%= f.association :contract, :collection => Contract.all(:order => 'name'), :prompt => "Choose a Contract" %>
  <%= f.input :name%>
  <%= f.association :category, :collection => Category.all(:order => 'name') %>
  <%= f.input :note%>
  <%= f.input :revenue%>
  <%= f.input :hours%>
  <%= f.input :rate%>
  <%= f.input :hours_used%>
  <%= f.input :fixed_price%>
  <%= f.association :status, :collection => Status.all(:order => 'name') %>
  <%= f.association :state, :collection => State.all(:order => 'name') %>
  <%= f.input :assigned_to%>
  <%= f.input :assign_date%>
  <%= f.input :request_date%>
  <%= f.input :commit_date%>
  <%= f.button :submit%>
<% end %>
   
